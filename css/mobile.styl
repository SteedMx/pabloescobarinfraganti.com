.inline
    display inline-block

@media (max-width: 599px)
    #one
        .inner
            background linear-gradient(to bottom, #fea645 0%,#fea645 50%,#fea645 50%,rgba(0,0,0,0.3) 50%,rgba(0, 0, 0, 0.3) 100%)
            height 100%

        &.landing
            background: url(../img/father_son.png), #fea645;
            background-position: bottom center, 0% center;
            background-size: 100% 50%, 100% 100%;
            background-repeat: no-repeat, no-repeat;
    
        h1
            position absolute
            left 10%
            bottom 15px
            width 80%
            padding 0
            color white
            font-size 1.1rem
        
        strong
            color white
        
        #pabloescobar
            background-size: 100% 50%;
            width 50%
            height 100vh
            display inline-block
            position absolute
            right 0
            top 0
        
        #sebasmarroquin
            background-size: 100% 50%;
            width 50%
            height 100vh
            display inline-block
            position absolute
            left 0
            top 0
    
    .iphone
        top 20%
        left initial
        width 100%
        height auto
        position fixed
        transform initial
        img
            width 35%
            box-shadow: 0 0 15px #000, 0 0 15px #0000;
    
    #two, #three, #four
        margin-top 0px
        
        .innerText
            background: rgba(0, 0, 0, 0.1);
            position initial
            transform initial
            height 100%
            
            h2
                color white
                margin 0px
                margin-left 10%
                margin-right 10%
                padding-top 40px
                font-size 1.3rem
                text-align center
            p
                //el valor del margin top va relacionado en 1.8 aprox del width de la imagen del libro
                margin 80vw 30% 0 30%
                color white
            
            ul
                margin 0
                margin-left 50%
                color #fea645
    
    #five
        top 62%
        right initial
        width 100%
        z-index 2
    
    #six
        width 100%
        height 100%
        background #fea645
        
        .requestForm
            width 80%
            height 80%
            position absolute
            z-index 4
            background #fea645
            padding 10% 10%
            
            h2
                text-align center
                font-size 1.7rem
            .field
                margin-top 30px
            .submit
                width 100%
                display flex
                justify-content center
                margin-top 10%

            label
                display block
                width 100%
                font-size 1.5rem
            input[type='text']
                width 100%
                height 30px
                font-size 1.4rem
            input[type='submit']
                padding 20px
                background black
                color white
                text-align center
                border 0
                font-size 1.2rem
                box-shadow: 5px 5px 5px rgba(0, 0, 0, 0.3);
            
        